{
    "name": "lab-server",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "prestart:dev": "docker compose up -d",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
        "test:e2e:verbose": "jest --config ./test/jest-e2e.json --verbose",
        "seed:dist:cli": "ts-node ./node_modules/.bin/typeorm-seeding",
        "seed:cli": "ts-node ./node_modules/.bin/typeorm-seeding",
        "seed:run": "yarn seed:dist:cli seed -n ./seeder.ormconfig.js",
        "seed:config": "yarn seed:dist:cli config -n ./seeder.ormconfig.js",
        "schema:drop": "yarn seed:cli schema:drop",
        "schema:sync": "yarn seed:cli schema:sync"
    },
    "dependencies": {
        "@nestjs/common": "^8.4.4",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^8.4.3",
        "@nestjs/platform-express": "^8.4.3",
        "@nestjs/swagger": "^5.2.1",
        "@nestjs/typeorm": "^8.0.3",
        "joi": "^17.6.0",
        "keycloak-connect": "^20.0.3",
        "nest-keycloak-connect": "^1.8.2",
        "nestjs-minio-client": "^1.1.0",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.2.0",
        "typeorm": "^0.3.5",
        "typeorm-seeding": "^1.6.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.3.0",
        "@commitlint/config-conventional": "^17.3.0",
        "@nestjs/cli": "^8.2.4",
        "@nestjs/schematics": "^8.0.9",
        "@nestjs/testing": "^8.4.3",
        "@types/express": "^4.17.13",
        "@types/jest": "27.4.1",
        "@types/minio": "^7.0.12",
        "@types/node": "^17.0.23",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.18.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-nestjs": "^1.2.3",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "keycloak-mock": "^1.0.10",
        "prettier": "^2.6.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.14.1",
        "typeorm-seeding": "^1.6.1",
        "typescript": "^4.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
